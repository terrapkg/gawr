---
import Layout from "@/layouts/Layout.astro";

const { name } = Astro.params;

const response = await fetch(`http://127.0.0.1:8000/api/packages/name/${name}`)
// FIXME: Error Handle this (404)
const data = await response.json() as Package;
---

<Layout title=`${name}`>
    <p>{data.name} as {data.version}</p>
</Layout>